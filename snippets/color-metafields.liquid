{% if template.name == 'page' %}
    {% if page.metafields.custom.body_custom_background_color != blank 
        or page.metafields.custom.body_custom_text_color != blank 
        or page.metafields.custom.footer_custom_background_color != blank
        or page.metafields.custom.header_custom_background_color != blank
        or page.metafields.custom.footer_custom_text_color != blank
    %}
        {% style %}

                :root {
                    {% if page.metafields.custom.body_custom_background_color.value != blank %}
                        --color-background: {{ page.metafields.custom.body_custom_background_color.value }} !important;
                    {% endif %}
                    {% if page.metafields.custom.body_custom_text_color != blank %}
                        --color-text: {{ page.metafields.custom.body_custom_text_color }} !important;
                        --color-text-footer: {{ page.metafields.custom.body_custom_text_color }} !important;
                    {% endif %}
                }

            {% if page.metafields.custom.header_custom_background_color.value != blank %}
                .header {
                    --color-background-header: {{ page.metafields.custom.header_custom_background_color.value }} !important;
                }
            {% endif %}

            {% if page.metafields.custom.footer_custom_background_color != blank %}
                .shopify-section.footer__parent {
                    --color-background-footer: {{ page.metafields.custom.footer_custom_background_color.value }};
                }
            {% endif %}
        {% endstyle %}
    {% endif %}
{% elsif template.name == 'blog' %}
    {% if blog.metafields.custom.body_custom_background_color != blank 
        or blog.metafields.custom.footer_custom_background_color != blank
        or blog.metafields.custom.header_custom_background_color != blank
        or blog.metafields.custom.footer_custom_text_color != blank
    %}
        {% style %}
            {% if blog.metafields.custom.body_custom_background_color.value != blank %}
                :root {
                    --color-background: {{ blog.metafields.custom.body_custom_background_color.value }} !important;
                }
            {% endif %}

            {% if blog.metafields.custom.header_custom_background_color.value != blank %}
                .header {
                    --color-background-header: {{ blog.metafields.custom.header_custom_background_color.value }} !important;
                }
            {% endif %}

            {% if blog.metafields.custom.footer_custom_background_color != blank %}
                .shopify-section.footer__parent {
                    --color-background-footer: {{ blog.metafields.custom.footer_custom_background_color.value }};
                }
            {% endif %}
        {% endstyle %}
    {% endif %}
{% endif %}